<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="robot_name" default="gunrobo" />
    <arg name="enable_gui" default="true" />
    <arg name="world_name" default="$(find sim_worlds)/worlds/simple_env_1.world" />

    <!-- robot description -->
    <arg name="robot_model_path" default="$(find gunrobo_description)/xacro/$(arg robot_name).xacro" />
    <param name="robot_description" command="$(find xacro)/xacro $(arg robot_model_path)" />

    <!-- start gazebo -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)"/>
        <arg name="paused" value="false" />
        <arg name="use_sim_time" value="true" />
        <arg name="gui" value="true"/>
        <arg name="recording" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <!-- spawn robot -->
    <include file="$(find gunrobo_description)/launch/spawn_gunrobo.launch" />

    <!-- rviz -->
    <group if="$(arg enable_gui)">
        <node name="rviz" pkg="rviz" type="rviz" args="-d $(find gunrobo_bringup)/rviz/default.rviz" />
    </group>
</launch>
